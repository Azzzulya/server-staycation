<div class="tab-pane fade show active" id="add-item" role="tabpanel" aria-labelledby="profile-tab">
  <div class="card shadow bm-4 mt-2">
    <div class="card-body">
      <form action="/admin/item/<%= item.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <div class="form-group">
          <label for="name">Title</label>
          <input type="text" name="title" value="<%= item.title %>"  class="form-control" required>
        </div>
        <div class="form-group">
          <label for="name">Price</label>
          <input type="text" name="price" value="<%= item.price %>" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="name">City</label>
          <input type="text" name="city" value="<%= item.city %>" class="form-control" required>
        </div>
        <div class="form-group">
          <label for="name">Category</label>
          <select class="form-control" name="categoryId">
            <option value="<%= item.categoryId.id %>">--- <%= item.categoryId.name %> ---</option>
            <% for(let i=0; i < category.length; i++) { %>
              <option value="<%= category[i].id %>"><%= category[i].name %></option>
            <% } %>
          </select>
        </div>
        <div class="form-group">
          <label for="name">Image</label>
          <input type="file" name="image" multiple >
        </div>
        <div class="form-group">
          <label for="name">Title</label>
          <textarea type="text" name="about" class="form-control"><%= item.description %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
      </form>
    </div>
  </div>
</div>